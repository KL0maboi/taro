{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "ts",
        "outDir": ".",
        "typeRoots": [
            "node_modules/@types",
            "ts/typings"
        ],
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictNullChecks": true
    },
    "exclude": ["node_modules"]
}
