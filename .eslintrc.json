{
    "env": {
        "browser": true,
        "commonjs": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "standard"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "requireConfigFile": false
    },
    "rules": {
        // } else {}
        "brace-style": 1,

        // Indents should be tabs.
        // Hint: Ctrl + Shift + Z will atuomatically change your indentation in VSCode.
        "indent": [2, "tab", { "SwitchCase": 1 }],

        // Semicolons and singlequotes should always be used.
        "semi": [2, "always"],
        "quotes": [2, "single"], // Backticks preferrably?

        // Use templating strings with backticks whenever possible.
        "prefer-template": 1,

        // ESLint globals have not been configured for these.
        "no-undef": 0,
        "no-var": 0,
        "no-use-before-define": 0,
        "no-unused-vars": 0,
        "no-unused-expressions": 0,
        "prefer-const": 0,

        // Unnecessary.
        "no-mixed-operators": 0,

        // More redundant manual linting.
        "new-cap": 0,
        "eqeqeq": 0,
        "curly": 0,
        "camelcase": 0,
        "no-sequences": 0,
        "no-tabs": 0,

        "prefer-regex-literals": 0,
        "no-useless-escape": 0,
        "no-func-assign": 0,
        "no-global-assign": 0,
        "no-self-assign": 0,
        "func-style": 0,
        "no-proto": 0,
        "no-undef-init": 0,
        "no-unsafe-finally": 0,
        "no-return-assign": 0,
        "no-redeclare": 0,
        "array-callback-return": 0,
        "no-prototype-builtins": 0,
        "no-eval": 0, // Alternatives to eval should be used. However, this is not a change that needs to be made now.
        "no-extend-native": 0,
        "node/no-callback-literal": 0, // Should be fixed later when engine has proper error handling.
        "no-useless-call": 0, // To be fixed later.
        "valid-typeof": 0, // Errors are being thrown as the type of the variable being compared is not known.
        "no-unmodified-loop-condition": 0, // This is repeatedly used throughout the odebase. It can be replaced with a better method, but doing so is not essential.
        "no-debugger": 0, // These should just be removed.
        "no-inner-declarations": 0 // Should be replaced in the future, as is bad practice.
    }
}
